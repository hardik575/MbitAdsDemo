<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/rlOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/_8sdp"
    >

        <TextView
            android:id="@+id/ivAdsIcon"
            style="@style/AppTheme.Ads"
            android:layout_alignParentRight="true" />

        <RelativeLayout
            android:id="@+id/rlAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAdsIcon">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                         />

                    <TextView
                        android:id="@+id/tvPk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/logo"
                        android:paddingLeft="@dimen/_4sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:text="PK FILM : Movie Maker,"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:id="@+id/tvSubText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPk"
                        android:layout_toRightOf="@+id/logo"
                        android:paddingLeft="@dimen/_4sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:text="Free on Play Store"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlInterMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/_24sdp"
            android:layout_below="@+id/rlAppName"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/ivImg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlInterMain"
            android:gravity="center"
            android:paddingTop="@dimen/_16sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_20sdp"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="adalklkadasdadsakn ;lmX  Create your video status with song lyrics in one min"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="2">
                <Button
                    android:id="@+id/imbtClose"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/new_bg_button"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:text="Close"
                    />
                <Button
                    android:id="@+id/imbtInstall"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/new_bg_button"
                    android:textColor="@color/white"
                    android:text="Install"
                    android:layout_marginLeft="@dimen/_12sdp"
                    />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlImgIntContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/adImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </ImageView>
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_14sdp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/new_ic_close_translator"
             />
    </RelativeLayout>
</RelativeLayout>