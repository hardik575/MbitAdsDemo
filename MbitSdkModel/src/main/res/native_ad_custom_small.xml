<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unified"
    android:layout_width="match_parent"
    android:layout_height="90dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:clipToPadding="false"
        android:foreground="?android:selectableItemBackgroundBorderless"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <com.google.android.gms.ads.nativead.NativeAdView
            android:id="@+id/native_ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingHorizontal="@dimen/_6sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rlttextDilyfeed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_toRightOf="@+id/cardAd"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/ad_headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:maxLength="30"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp" />

                        <RelativeLayout
                            android:id="@+id/rltadViewInside"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">

                            <TextView
                                android:id="@+id/adChoice"
                                style="@style/AppTheme.Ads"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_4sdp" />

                            <TextView
                                android:id="@+id/ad_body"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:layout_toLeftOf="@+id/ad_call_to_action"
                                android:layout_toRightOf="@+id/adChoice"

                                android:justificationMode="none"
                                android:maxLength="90"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8ssp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/ad_call_to_action"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_26sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/new_bg_button"
                                android:gravity="center|center_vertical"
                                android:paddingHorizontal="@dimen/_12sdp"
                                android:text="visit Site"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8ssp" />

                        </RelativeLayout>


                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAd"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_centerVertical="true"
                        android:clipToPadding="false"
                        app:cardBackgroundColor="@color/app_color"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false">

                        <ImageView
                            android:id="@+id/ad_app_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_horizontal" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


            </RelativeLayout>


        </com.google.android.gms.ads.nativead.NativeAdView>
    </androidx.cardview.widget.CardView>

</com.google.android.gms.ads.nativead.NativeAdView>

